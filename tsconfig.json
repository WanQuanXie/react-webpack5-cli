{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "lib": ["es6", "dom", "es2017.object", "es2015.collection"],
        "sourceMap": true,
        "resolveJsonModule": true,
        "importsNotUsedAsValues": "error",
        "jsx": "react-jsx",
        "noImplicitAny": false,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "noEmit": true,
        "noUncheckedIndexedAccess": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./src",
        "paths": {
            "@/*": ["./*"]
        }
    },
    "exclude": ["node_modules"],
    "include": ["src"]
}
